<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <co_simulation_action>
        <title>Co-simulation App Server</title>
        <description>Co-simulation App Server</description>
        <variables>
            <var_000>
                <var_name>__no_variable_name__</var_name>
                <var_value>__no_variable_value__</var_value>
            </var_000>
        </variables>
        <parameters>
            <par_001>
                <par_name>__no_parameter_name__</par_name>
                <par_value>__no_parameter_name__</par_value>
            </par_001>
        </parameters>
        <action>
            <launcher>
                <launcher_command>{CO_SIM_LAUNCHER}</launcher_command>
                <launcher_arguments>
                    <argv_01_option>app_server:app</argv_01_option>
                    <argv_01_value>{CO_SIM_EMPTY}</argv_01_value>
                    <argv_02_option>--bind</argv_02_option>
                    <argv_02_value>{CO_SIM_APP_SERVER_ADDRESS}</argv_02_value>
                </launcher_arguments>
            </launcher>
            <performer>
                <performer_binary>gunicorn</performer_binary>
                <performer_arguments>
                    <argv_01_empty>{CO_SIM_EMPTY}</argv_01_empty>  <!-- change it with something for example CO_SIM_NONE -->
                </performer_arguments>
            </performer>
            <routine>
                <routine_code>{CO_SIM_APP_SERVER_PATH}/app_server.py</routine_code>
                <routine_arguments>
                    <!-- TODO: change it with something for example CO_SIM_NONE -->
                    <argv_01_empty>{CO_SIM_EMPTY}</argv_01_empty>
                </routine_arguments>
            </routine>
        </action>
    </co_simulation_action>
</settings>
